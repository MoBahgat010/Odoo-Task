<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_whatsapp" model="ir.ui.view">
        <field name="name">res.partner.form.whatsapp</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="mobile" position="replace">
                <field name="mobile" placeholder="+201234567890"/>
            </field>
            <field name="mobile" position="after">
                <button string="Chat on WhatsApp" class="btn-primary" type="object" name="action_whatsapp_chat" groups="base.group_user"/>
            </field>
        </field>
    </record>

    <record id="view_whatsapp_message_input_form" model="ir.ui.view">
        <field name="name">whatsapp.message.input.form</field>
        <field name="model">whatsapp.message.input</field>
        <field name="arch" type="xml">
            <form string="Send WhatsApp Message">
                <group>
                    <group>
                        <field name="partner_id" options="{'no_create': True}"/>
                        <field name="mobile_digits" readonly="1"/>
                    </group>
                    <group>
                        <field name="message" nolabel="1" placeholder="Enter your message here... (Press Enter to send in WhatsApp after opening)"/>
                    </group>
                </group>
                <footer>
                    <button name="send_whatsapp_message" type="object" string="Open WhatsApp Chat" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>