<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inventory_list_view" model="ir.ui.view">
        <field name="name">asset.inventory.list</field>
        <field name="model">asset.inventory</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="inventory_form_view" model="ir.ui.view">
        <field name="name">asset.inventory.form</field>
        <field name="model">asset.inventory</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <label for="scan_barcode"/>
                        <field name="scan_barcode" placeholder="dummy scan"/>
                    </group>
                    <notebook>
                        <page string="Lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="asset_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="inventory_action" model="ir.actions.act_window">
        <field name="name">Asset Inventories</field>
        <field name="res_model">asset.inventory</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>