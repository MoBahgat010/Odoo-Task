<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_move_form_inherit_department" model="ir.ui.view">
        <field name="name">account.move.form.inherit.department</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Insert department_id in a new group after the group containing partner_id -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <group name="department_group" string="Department Details">
                    <field name="department_id" widget="many2one" options="{'no_open': True}" string="Department"/>
                </group>
            </xpath>
            
            <!-- Add department_id column to invoice lines -->
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='product_id']" position="after">
                <field name="department_id" string="Department" widget="many2one"/>
            </xpath>
            
            <!-- Keep existing widget for invoice lines -->
            <xpath expr="//field[@name='invoice_line_ids']" position="attributes">
                <attribute name="widget">one2many_list</attribute>
            </xpath>
        </field>
    </record>
</odoo>